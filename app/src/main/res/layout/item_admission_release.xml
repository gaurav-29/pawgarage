<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/detailsCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp"
        android:layout_margin="9dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
            <TextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admission Details 1  >"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="18dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/locationIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_location"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/titleTV"
                app:layout_constraintStart_toStartOf="@+id/titleTV"
                app:tint="@color/green" />
            <TextView
                android:id="@+id/addressTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ahmedabad"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/primary_color"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/locationIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/locationIV" />
            <ImageView
                android:id="@+id/dateIV"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/addressTV"
                app:layout_constraintStart_toStartOf="@+id/titleTV" />
            <TextView
                android:id="@+id/dateTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:paddingTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/dateIV"
                app:layout_constraintBottom_toBottomOf="@id/dateIV"
                app:layout_constraintTop_toTopOf="@id/dateIV"
                app:layout_constraintEnd_toEndOf="@id/guideline"/>
            <ImageView
                android:id="@+id/conditionIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_deworming"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/dateIV"
                app:layout_constraintStart_toStartOf="@+id/titleTV" />
            <TextView
                android:id="@+id/conditionTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/conditionIV"
                app:layout_constraintTop_toTopOf="@id/conditionIV"
                app:layout_constraintEnd_toEndOf="@id/guideline"/>
            <ImageView
                android:id="@+id/personIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_person"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/addressTV"
                app:layout_constraintStart_toStartOf="@+id/guideline" />
            <TextView
                android:id="@+id/personTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:paddingTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/personIV"
                app:layout_constraintBottom_toBottomOf="@id/personIV"
                app:layout_constraintTop_toTopOf="@id/personIV"
                app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView
                android:id="@+id/mobileIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_call"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/personIV"
                app:layout_constraintStart_toStartOf="@+id/guideline" />
            <TextView
                android:id="@+id/mobileTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:paddingTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/mobileIV"
                app:layout_constraintBottom_toBottomOf="@id/mobileIV"
                app:layout_constraintTop_toTopOf="@id/mobileIV"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/noteLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_green"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/conditionTV"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/grey_text"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/noteTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dog not found"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>